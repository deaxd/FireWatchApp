<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hfad.report.InterventionSubmitFragment">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/mt_kindoint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:hint="Vrsta intervencije"
        app:met_underlineColor="@color/colorPrimary"
        app:met_textColorHint="@color/colorPrimary"
        app:met_baseColor="@color/colorAccent"
        app:met_maxCharacters="11"
        app:met_minCharacters="11"
        app:met_floatingLabel="highlight"/>

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/mt_adress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:hint="Adresa"
        app:met_underlineColor="@color/colorPrimary"
        app:met_textColorHint="@color/colorPrimary"
        app:met_baseColor="@color/colorAccent"
        app:met_floatingLabel="highlight"/>

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/mt_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:hint="Surname"
        app:met_underlineColor="@color/colorPrimary"
        app:met_textColorHint="@color/colorPrimary"
        app:met_baseColor="@color/colorAccent"
        app:met_floatingLabel="highlight"/>

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/mt_duration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:hint="Trajanje"
        app:met_underlineColor="@color/colorPrimary"
        app:met_textColorHint="@color/colorPrimary"
        app:met_baseColor="@color/colorAccent"
        app:met_floatingLabel="highlight"/>

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/mt_members"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:hint="Vatrogasci na duÅ¾nosti"
        app:met_underlineColor="@color/colorPrimary"
        app:met_textColorHint="@color/colorPrimary"
        app:met_baseColor="@color/colorAccent"
        app:met_floatingLabel="highlight"/>

   </LinearLayout>


    <Button
        android:id="@+id/btn_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center|bottom"
        android:text="Save"
        android:textColor="@android:color/white"
        android:background="@color/colorAccent"/>

    </RelativeLayout>